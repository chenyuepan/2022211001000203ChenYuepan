<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>demo1</servlet-name>
        <servlet-class>org.example.servlet.ServletDemo1</servlet-class>
        <!--        指定Servlet的创建时机
                    1.第一次被访问时创建：<load-on-startup>的值为负数（默认）
                    2.在服务器启动时创建，<load-on-startup>为0或正数-->
        <load-on-startup>-1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>demo1</servlet-name>
        <url-pattern>/demo1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>demo2</servlet-name>
        <servlet-class>org.example.servlet.ServletDemo2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>demo2</servlet-name>
        <url-pattern>/demo2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>homework</servlet-name>
        <servlet-class>org.example.servlet.HomeworkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homework</servlet-name>
        <url-pattern>/homework</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>success</servlet-name>
        <servlet-class>org.example.servlet.HSuccessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>success</servlet-name>
        <url-pattern>/hSuccessServlet</url-pattern>
    </servlet-mapping>

<!--    第4周作业部分 -->

    <servlet>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <servlet-class>org.example.servlet.ConfigDemoServlet</servlet-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>Chen Yuepan</param-value>
        </init-param>
        <init-param>
            <param-name>studentid</param-name>
            <param-value>2022211001000203</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>driver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/userdb</param-value>
    </context-param>
    <context-param>
        <param-name>Username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>Password</param-name>
        <param-value>201010</param-value>
    </context-param>

    <!--    第4周作业部分 -->

</web-app>